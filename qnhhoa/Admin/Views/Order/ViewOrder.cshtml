                    <div class="module-head">
                        <h3>Order details</h3>
                    </div>
                    <div class="modal-body">
                        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered display" width="100%">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Product</th>
                                    <th>Cost</th>
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr class="o1">
                                    @foreach (var cthd in ViewBag.data)
                                    {
                                        <th>@cthd.MaHD</th>
                                        <th>@cthd.TenSP</th>
                                        <th>@cthd.GiaSP</th>
