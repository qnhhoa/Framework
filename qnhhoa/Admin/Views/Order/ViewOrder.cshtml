                    <form class="form-vertical" action="/Order/UpdateOrder" method="post">
                        <div class="module-head">
                            <h3>Update Order</h3>
                        </div>
                        <div class="module-option clearfix">
                            <div class="media-body">
                                <table cellpadding="5" style="width: 100%">
                                    <tr>
                                        <td for="username" width="10%">Order ID</td>
                                        <td width="100%">
                                            <input type="text" class="span3" name="MaHD" value="@Model.MaHD" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td for="username" width="10%">Username</td>
                                        <td width="100%">
                                            <input type="text" class="span3" name="Username" value="@Model.Username" readonly>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Fullname</td>
                                        <td width="50%">
                                            <div class="input-append">
                                                <input type="datetime" class="span3" name="Fullname" value="@Model.Fullname" disabled>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Receive by</td>
                                        <td width="100%">
                                            <input type="datetime" class="span3" name="NgayNH" value="@Model.NgayNH">
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="20%">Status</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <select class="span3" type="text" name="Trangthai" value="@Model.Trangthai">
                                                    <option value="@Model.Trangthai">@Model.Trangthai</option>
                                                    <option>Pickup</option>
                                                    <option>On process</option>
                                                    <option>On delivery</option>
                                                    <option>Delivered</option>
                                                </select>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Address</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <input class="span5" type="text" name="Diachi" value="@Model.Diachi">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Phone number</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <input class="span5" type="text" name="SDT" value="@Model.SDT">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Subtotal</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <input class="span5" type="text" name="tongtien" value="@Model.Tongtien">
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Payment</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <select class="span5" type="text" name="phuongthuc">
                                                    <option value="@Model.Phuongthuc">@Model.Phuongthuc</option>
                                                    <option>Cash on delivery</option>
                                                    <option>Momo wallet</option>
                                                </select>
                                            </div>
                                        </td>
                                    </tr>
                                </table>
                                <center>
                                    <input type="submit" class="btn btn-success" value="Update" style="margin-top: 10px;"> &nbsp;
                                    <a asp-area="" asp-controller="Order" asp-action="Index" class="btn btn-info" style="margin-top: 10px;">Back</a>
                                </center>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
