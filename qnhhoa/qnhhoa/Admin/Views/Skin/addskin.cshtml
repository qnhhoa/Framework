
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skin</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/theme.css" rel="stylesheet" />
    <link href="~/css/bootstrap-responsive.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse">
                    <i class="icon-reorder shaded"></i>
                </a><a class="brand">Add SkinCare Product</a>
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav pull-right">
                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Account &ensp; <i class="fa fa-user" class="nav-avatar"></i>
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Information</a></li>
                                <li><a href="#">Log out</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="module span10 offset1">
                    <form class="form-vertical">
                        <div class="module-head">
                            <h3>Add SkinCare Product</h3>
                        </div>
                        <div class="module-option clearfix">
                            <div class="media-body">
                                <table cellpadding="3" style="width: 100%">
                                    <tr>
                                        <td width="10%">Product Name </td>
                                        <td width="100%">
                                            <input type="text" name="name" class="span2" required>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Price</td>
                                        <td width="50%">
                                            <div class="input-append">
                                                <input type="text" name="price" class="span2" required><span class="add-on">VND</span>
                                            </div>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td>Brand</td>
                                        <td>
                                            <select name="brand" style="margin-top: 10px; padding: 3px;">
                                                <option value="">Brand</option>
                                                <option value="1">1</option>
                                                <option value="2">2</option>
                                                <option value="3">3</option>
                                                <option value="4">4</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td width="10%">Quantify</td>
                                        <td width="100%">
                                            <div class="input-prepend">
                                                <input class="span1" name="quantify" type="text" required>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <span>Description</span>
                                        <br>
                                        <div class="row-fluid">
                                            <textarea class="span12" style="height: 280px; resize: none;"></textarea>
                                        </div>

                                    </tr>
                                    <tr>
                                        <td>Pictures</td>
                                        <td>
                                            <input type="file" name="image" style="padding-top: 5px;">
                                        </td>
                                    </tr>
                                </table>
                                <center>
                                    <input type="submit" class="btn btn-success" value="Add product" style="margin-top: 10px;"> &nbsp;
                                    <a href="Skin.html" class="btn btn-info" style="margin-top: 10px;">Back</a>
                                </center>

                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
    </body>
</html>
